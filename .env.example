# Server Configuration
PORT=3001
NODE_ENV=development

# LLM Provider Configuration
# Options: 'claude' or 'ollama'
LLM_PROVIDER=ollama

# Claude Configuration (required if LLM_PROVIDER=claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama Configuration (required if LLM_PROVIDER=ollama)
# Available models: llama3.2:latest, llama3.2-vision:latest, llama3.1:8b
OLLAMA_MODEL=llama3.2:latest
OLLAMA_BASE_URL=http://localhost:11434

# WhisperX Configuration
WHISPERX_API_URL=http://localhost:9010

# MongoDB Configuration
MONGODB_URI=mongodb://admin:admin123@localhost:27017/videosegment?authSource=admin

# Frontend URL (for CORS in development)
FRONTEND_URL=http://localhost:5173
