{
  "name": "video-transcription-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "nodemon server/index.js",
    "build": "tsc && vite build",
    "build:serve": "npm run build && npm run server",
    "server": "node server/index.js",
    "start": "NODE_ENV=production npm run server",
    "serve": "npm run server",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "docker:start": "docker compose -f docker/docker-compose.yml up -d --build",
    "docker:stop": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:restart": "npm run docker:stop && npm run docker:start",
    "docker:whisper:start": "docker compose -f docker/docker-compose.yml up -d whisperx",
    "docker:whisper:stop": "docker compose -f docker/docker-compose.yml stop whisperx",
    "docker:whisper:logs": "docker compose -f docker/docker-compose.yml logs -f whisperx",
    "docker:ollama:logs": "docker compose -f docker/docker-compose.yml logs -f ollama",
    "docker:ffmpeg:logs": "docker compose -f docker/docker-compose.yml logs -f ffmpeg",
    "test:whisperx": "chmod +x test/whisperx-test.sh && ./test/whisperx-test.sh",
    "test:quick": "chmod +x test/quick-test.sh && ./test/quick-test.sh",
    "test:segmentation": "node test/test-segmentation.js",
    "test:pm2": "chmod +x test/test-pm2.sh && ./test/test-pm2.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  }
}
