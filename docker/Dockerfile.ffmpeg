FROM node:18-alpine

# Install FFmpeg and wget for health checks
RUN apk add --no-cache ffmpeg wget

# Create app directory
WORKDIR /app

# Copy package.json and server file
COPY ffmpeg-server.js .
COPY package-ffmpeg.json ./package.json

# Install dependencies
RUN npm install

# Create temp directories
RUN mkdir -p /tmp/uploads /tmp/frames

# Expose port
EXPOSE 9020

# Start the server
CMD ["node", "ffmpeg-server.js"]
