FROM jrottenberg/ffmpeg:4.4-alpine

# Install Node.js and npm for a simple API server
RUN apk add --no-cache nodejs npm

# Create app directory
WORKDIR /app

# Copy package.json and server file
COPY ffmpeg-server.js .
COPY package-ffmpeg.json ./package.json

# Install dependencies
RUN npm install

# Expose port
EXPOSE 9020

# Start the server
CMD ["node", "ffmpeg-server.js"]
